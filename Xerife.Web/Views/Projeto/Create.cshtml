@{
    ViewBag.Title = "Projeto";
    ViewBag.SubTitle = "Incluir";
}

@section Menu {
    @Scripts.Render("~/Scripts/Tfs/all.js")
    @Scripts.Render("~/Scripts/Channel/all.js")
    @Scripts.Render("~/Scripts/Shared/all.js")
    @Scripts.Render("~/Scripts/Projeto/all.js")
}

<div class="row">
    <div class="col-md-12">
        <form role="form">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Dados do Projeto</h3>
                </div>
                <div class="box-body">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label>Projeto no Channel</label>
                            <select id="ddProjeto" class="form-control" data-placeholder="Selecione o projeto do Channel">
                                <option value="" selected="selected"></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>TFS</label>
                            <select id="ddTfs" class="form-control" data-placeholder="Selecione o servidor do TFS">
                                <option value="" selected="selected"></option>
                                <option value="http://bacutia:8080/tfs/">Bacutia</option>
                                @*<option value="http://baleia:8080/tfs/">Baleia</option>*@
                                <option value="http://solemar:8080/tfs/">Solemar</option>
                                <option value="http://gunga:8080/tfs/">Gunga (Homologação)</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Unidade</label>
                            <select id="ddCollection" class="form-control" disabled="disabled" data-placeholder="Selecione a Unidade"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Contrato</label>
                            <select id="ddProject" class="form-control" disabled="disabled" data-placeholder="Selecione o Contrato"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Equipe</label>
                            <select id="ddTeam" class="form-control" disabled="disabled" data-placeholder="Selecione a Equipe"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Projeto no TFS</label>
                            <select id="ddAreaPath" class="form-control" disabled="disabled" data-placeholder="Selecione a Área"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Tarefas do Projeto <small>Selecione tarefas que serão usadas para apontamento no TFS</small></h3>
                </div>
                <div class="box-body" style="padding-left: 30px; padding-right: 20px;">
                    <div id="tarefas" class="row">

                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" id="btnTodasTarefas" style="display: none;" class="btn btn-info btn-xs">Exibir todas as tarefas</button>
                </div>
            </div>
            <div class="box-footer">
                <button id="btIncluir" type="submit" class="btn btn-primary">Gravar</button>
                <a href="@Url.Action("Index", "Projeto")" class="btn btn-default">Cancelar</a>
            </div>
        </form>
    </div>
</div>
<script>
    var idProjeto = 0;
    var tarefasSelecionadas = null;
    $(document).ajaxStart(function () { Pace.restart(); });
    $(document).ready(function () {

        $("select#ddProjeto").chosen();
        $("select#ddTfs").chosen();
        $("select#ddCollection").chosen();
        $("select#ddProject").chosen();
        $("select#ddTeam").chosen();
        $("select#ddAreaPath").chosen();

        GetProjetosChannel(function (projetoList) {
            $.each(projetoList, function (i, val) {
                $("select#ddProjeto").append($('<option></option>').val(val.idProjeto).html(val.nomeProjeto));
            });
            $("select#ddProjeto").trigger("chosen:updated");
        });
    })
</script>