@{
    ViewBag.Title = "Usuario";
    ViewBag.SubTitle = "Consulta";
}

@section Menu {
    @Scripts.Render("~/Scripts/Usuario/all.js")
    @Scripts.Render("~/Scripts/Shared/all.js")
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">
                <button type="button" id="btnFormInclusao" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Cadadstrar Usuario</button><br /><br />
                <table id="tbUsuario" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                Perfil
                            </th>
                            <th>
                                Login
                            </th>
                            <th>
                                Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Usuario</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="col-md-12" style="display:none;">
                        <div class="form-group">
                            <label for="idUsuario">Id</label>
                            <input type="text" class="form-control" id="idUsuario" placeholder="idUsuario" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Usuario</label>
                            <select id="ddUsuario" class="form-control" style="width:100%;" data-placeholder="Selecione o Usuário">
                                <option value="" selected="selected"></option>
                            </select>
                            <input type="text" class="form-control" id="login" disabled="disabled" placeholder="login" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Perfil</label>
                            <select id="ddPerfil" class="form-control" style="width:100%;" data-placeholder="Selecione o perfil do Usuário">
                                <option value="" selected="selected"></option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnIncluir">Incluir</button>
                <button type="button" class="btn btn-primary" id="btnAtualizar" style="display:none;">Atualizar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js/all.js")
}
<script>
    $(document).ajaxStart(function () { Pace.restart(); });
    $(document).ready(function () {

        $("select#ddPerfil").chosen({ width: '100%' });
        GetPerfis(function (perfilList) {
            $.each(perfilList, function (i, val) {
                $("select#ddPerfil").append($('<option></option>').val(val.Id).html(val.Nome));
            });
            $("select#ddPerfil").trigger("chosen:updated");
        });

        ConsultarUsuarios(function (usuarioList) {
            $.each(usuarioList, function (i, val) {
                var newRow = "<tr>";
                newRow = newRow + "<tr>";
                newRow = newRow + "<td>" + val.NomePerfil + "</td>";
                newRow = newRow + "<td>" + val.Login + "</td>";
                newRow = newRow + "<td>";
                newRow = newRow + "<a href='#' onclick='return EditUsuario(" + val.Id + ")'><i class='fa fa-fw fa-edit'></i></a>";
                newRow = newRow + "<a href='#' onclick='return ExcluirUsuario(" + val.Id + ")'><i class='fa fa-fw fa-remove'></i></a>";
                newRow = newRow + "</td>";
                newRow = newRow + "</tr>";
                $("table#tbUsuario>tbody").append(newRow);
            });
        });
    })

</script>
